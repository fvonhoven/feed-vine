        },
        {
          "name": "Get Single Article",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{api_key}}"
              }
            ],
            "url": "{{base_url}}/api-v1-articles/ARTICLE_ID_HERE"
          }
        },
        {
          "name": "Mark Article as Read",
