              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"is_read\": true\n}"
            },
            "url": "{{base_url}}/api-v1-articles/ARTICLE_ID_HERE/read"
          }
        },
        {
          "name": "Mark Article as Unread",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{api_key}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"is_read\": false\n}"
            },
            "url": "{{base_url}}/api-v1-articles/ARTICLE_ID_HERE/read"
          }
        },
        {
          "name": "Save Article",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{api_key}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"is_saved\": true\n}"
            },
            "url": "{{base_url}}/api-v1-articles/ARTICLE_ID_HERE/save"
          }
        },
        {
          "name": "Unsave Article",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{api_key}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"is_saved\": false\n}"
            },
            "url": "{{base_url}}/api-v1-articles/ARTICLE_ID_HERE/save"
          }
        }
      ]
    },
